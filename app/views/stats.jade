doctype html
html(lang='en')
  //подключение header
  include includes/head 
  
  body
    .wrapper
      .navigation
        nav.navbar.navbar-default
          .container
            // Brand and toggle get grouped for better mobile display
            // <h1>Национальный реестр интегрированных отчетов</h1>
            p.nav-description Национальный реестр интегрированных отчетов
            // <h5>Краткое пояснение, что это</h5>
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              //- a.navbar-brand(href='#')
              //-   img(src='/img/da-strateg-logo.png', alt='logo1')
            // Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/main') На главную
                li
                  a(href='/search') Поиск
                li.active
                  a(href='/stats') Интерактивная статистика
                li
                  a(href='/register-report') Регистрация отчета
                li
                  a(href='/register-company') Регистрация компании
            // /.navbar-collapse
          // /.container-fluid
      // /container navigation
      .container.mainpage
        main.container
          .row
            .stats-left.col-md-4.col-xs-12.col-sm-12
              .stats-caption.uppercase
                | Формирование диаграммы
              .stats-selection
                div
                  select(name='diagram_type')
                    option(value='0') Круговая диаграмма
                    option(value='1') Гистограмма
                div
                  select(name='economy')
                    for val in sector
                      option(value='#{val}') #{val}
                  br
                div
                  select(name='standart')
                    option(value='Все стандарты') Все стандарты
                      for val in standarts
                        option(value='#{val}') #{val}
                div
                  select(name='company_size')
                    for val in size_of_company
                      option(value='#{val}') #{val}
                  br
                div
                  select(name='ownership')
                    for val in type_of_ownership
                      option(value='#{val}') #{val}
                  br
                .buttons.center
                  button.btn.btn-default.green-btn(type='submit' onclick='create()') Создать
              // /stats-selection
            // /stats-left
            - var ttt
            .stats-right.col-md-8.col-xs-12.col-sm-12
              .stats-caption.uppercase
                | Окно статистики
              .stats-result
                //h3 Название диаграммы
                .graph
                  //- | Здесь диаграмма
                  #piechart(style='min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto') 
                  #barchart(style='min-width: 310px; height: 400px; margin: 0 auto') 

                  //- #test_rest.p.
                    
            // /stats-right
          // /row
      // /mainpage

      //подключение footer
      include includes/footer
      script(src='/js/graph.js')  
      script(src='js/highchartsMyTheme.js')
      script(src='js/exporting.js')
      script(src='https://code.highcharts.com/modules/data.js')
      script(src='https://code.highcharts.com/modules/drilldown.js')


