if user
    html(lang='ru')
    //подключение header
    include includes/head 
    main.container
        .row
                h2 Вы зашли как "#{user.name}"
                a(href='/logout') Выйти
                hr
                br
                details
                    summary 
                        b Новости
                    h3 Добавить:
                    form(method='POST', action='/news/add')
                        input(type='text', name='header', placeholder='Заголовок')
                        br
                        br
                        input(type='text', name='link', placeholder='Ссылка')
                        br
                        br
                        button(type='submit') Отправить
                    hr
                    h3 Редактирование новостей
                    span
                        input(type='checkbox', value='Выбрать все')
                        | Выбрать все 
                        button(type='submit') Удалить
                        hr
                        - var i = 0;
                        for nw in news
                            - i++;
                            input(type='checkbox', value='#{nw._id}')
                            | #{nw.header} - #{nw.date} 
                            if i<=3
                                b
                                    | - На главной
                            else
                                | - Cкрыта
                            br
                    br
                br
                br
                details
                    summary Непровернные 
                        b Компании
                    input(type='checkbox', value='Выбрать все')
                    | Выбрать все 
                    button(type='submit') Добавить
                    | &nbsp;
                    button(type='submit') Отклонить
                    hr
                    for val in companies 
                        if val.accept == '0'
                            input(type='checkbox', value='#{val.name}') 
                            | #{val.name} (Добавлено: #{val.date}) - 
                            a(href='/company/#{val._id}') Просмотреть
                            br
                            br
                details
                    summary Отклоненные 
                        b Компании
                    input(type='checkbox', value='Выбрать все')
                    | Выбрать все 
                    button(type='submit') Добавить
                    hr
                    for val in companies 
                        if val.accept == '2'
