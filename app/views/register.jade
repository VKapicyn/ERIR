doctype html
html(lang='en')
  //подключение header
  include includes/head 
  body
    .wrapper
      .navigation
        nav.navbar.navbar-default
          .container
            // Brand and toggle get grouped for better mobile display
            p.nav-description Национальный реестр интегрированных отчетов
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#')
                img(src='img/da-strateg-logo.png', alt='logo1')
            // Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/main') На главную
                li
                  a(href='/search') Поиск
                li
                  a(href='/stats') Интерактивная статистика
                li.active
                  a(href='/register') Регистрация отчета и компании
            // /.navbar-collapse
          // /.container-fluid
      // /container navigation
      main.container
        .row
          h1.uppercase.center Регистрация отчета и компании
          .space
          .col-md-6.col-md-offset-3.col-xs-12.col-sm-12.center
            button.btn.btn-default.btn-lg.green-btn.btn-reg-company(type='button', title='Перейти на страницу регистрации компании')
              a(href='register-company', target='_blank', title='')
                span.glyphicon.glyphicon-briefcase
                |  Зарегистрировать компанию
            button.btn.btn-default.btn-lg.green-btn.btn-reg-report(type='button', title='Перейти на страницу регистрации отчета')
              a(href='register-report', target='_blank', title='')
                span.glyphicon.glyphicon-book
                |  Зарегистрировать отчет
          // /btn-reg-company
